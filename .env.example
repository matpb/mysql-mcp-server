# MySQL Connection Settings
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=

# Connection Pool Settings
MYSQL_CONNECTION_LIMIT=10
MYSQL_CONNECT_TIMEOUT=60000

# Query Settings
QUERY_TIMEOUT=30000
MAX_ROWS=1000

# ===========================================
# Google Cloud SQL Proxy Settings
# ===========================================
# Enable Cloud SQL Proxy (set to 'true' to enable)
CLOUD_SQL_PROXY_ENABLED=false

# Cloud SQL instance connection name (required when proxy enabled)
# Format: project:region:instance
CLOUD_SQL_INSTANCE=

# Local TCP port for the proxy (default: 3307)
CLOUD_SQL_PROXY_PORT=3307

# Path to service account JSON credentials (optional, falls back to ADC)
# If not set, uses Application Default Credentials (gcloud auth)
GOOGLE_APPLICATION_CREDENTIALS=

# Custom path to Cloud SQL Proxy binary (optional)
# If not set, uses ~/.cloudsql-proxy/cloud-sql-proxy
CLOUD_SQL_PROXY_BINARY=

# Auto-download proxy binary if not found (default: true)
CLOUD_SQL_PROXY_AUTO_DOWNLOAD=true

# Proxy startup timeout in milliseconds (default: 30000)
CLOUD_SQL_PROXY_STARTUP_TIMEOUT=30000