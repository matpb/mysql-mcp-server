# ===========================================
# MySQL MCP Server - Docker Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# API Authentication (REQUIRED for remote access)
# ===========================================
# Comma-separated list of valid API keys
# Generate secure keys: openssl rand -hex 32
API_KEYS=your-secret-api-key-1,your-secret-api-key-2

# ===========================================
# Transport Configuration
# ===========================================
MCP_PORT=8080
CORS_ORIGIN=*

# ===========================================
# MySQL Connection
# ===========================================
MYSQL_HOST=your-mysql-host
MYSQL_PORT=3306
MYSQL_USER=your_username
MYSQL_PASSWORD=your_password
MYSQL_DATABASE=your_database
MYSQL_CONNECTION_LIMIT=10
MYSQL_CONNECT_TIMEOUT=60000

# ===========================================
# Query Settings
# ===========================================
QUERY_TIMEOUT=30000
MAX_ROWS=1000

# ===========================================
# Google Cloud SQL Proxy (Optional)
# ===========================================
# Set to true to use Cloud SQL Proxy
CLOUD_SQL_PROXY_ENABLED=false
# Instance connection name: project:region:instance
CLOUD_SQL_INSTANCE=your-project:us-central1:your-instance
CLOUD_SQL_PROXY_PORT=3307
# Path to service account JSON key file on host machine
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
CLOUD_SQL_PROXY_STARTUP_TIMEOUT=30000
